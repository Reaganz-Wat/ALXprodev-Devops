#!/bin/bash

POKEMON_DIR="pokemon_data"
REPORT_FILE="pokemon_report.csv"

# CSV header
echo "Name,Height (m),Weight (kg)" > "$REPORT_FILE"

# Loop through JSON files
for file in "$POKEMON_DIR"/*.json; do
    name=$(jq -r '.name' "$file" | sed 's/.*/\u&/')
    height=$(jq '.height' "$file" | awk '{printf "%.2f", $1/10}')
    weight=$(jq '.weight' "$file" | awk '{printf "%.2f", $1/10}')
    echo "$name,$height,$weight" >> "$REPORT_FILE"
done

# Display report path
echo "CSV Report generated at: $REPORT_FILE"
echo

# Print CSV content
cat "$REPORT_FILE"
echo

# Calculate averages with awk (skip header line)
awk -F, 'NR>1 {h+=$2; w+=$3; count++} 
END {printf "\nAverage Height: %.2f m\nAverage Weight: %.2f kg\n", h/count, w/count}' "$REPORT_FILE"
